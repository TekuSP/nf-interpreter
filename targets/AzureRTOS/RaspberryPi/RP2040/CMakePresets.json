{
    "version": 4,
    "include": [
        "../../../../config/user-tools-repos.json",
        "../../../../config/user-prefs.json"
    ],
    "configurePresets": [
        {
            "name": "RP2040",
            "inherits": [
                "user-tools-repos",
                "user-prefs"
            ],

            "hidden": false,
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "TARGET_BOARD": "${presetName}",
                "TARGET_SERIES": "RP2040",
                "RTOS": "AzureRTOS",
                "SUPPORT_ANY_BASE_CONVERSION": "ON",
                "NF_FEATURE_DEBUGGER": "ON",
                "NF_FEATURE_RTC": "OFF",
                "NF_FEATURE_HAS_SDCARD": "OFF",
                "NF_FEATURE_HAS_CONFIG_BLOCK": "OFF",
                "NF_FEATURE_HAS_USB_MSD": "OFF",
                "NF_FEATURE_USE_SPIFFS": "OFF",
                "NF_BUILD_RTM": "OFF",
                "NF_SECURITY_MBEDTLS": "OFF",
                "NF_NETWORKING_SNTP": "OFF",
                "NF_NETWORKING_ENC28J60": "OFF",
                "NF_FEATURE_SUPPORT_REFLECTION": "OFF",
                "NF_FEATURE_BINARY_SERIALIZATION": "OFF",
                "USE_NETWORKING_OPTION": "OFF",
                "API_nanoFramework.Networking.Sntp": "OFF",
                "API_nanoFramework.Runtime.Events": "OFF",
                "API_nanoFramework.ResourceManager": "OFF",
                "API_nanoFramework.System.Collections": "OFF",
                "API_nanoFramework.System.Text": "OFF",
                "API_System.IO.FileSystem": "OFF",
                "API_System.Math": "OFF",
                "API_System.Net": "OFF",
                "API_System.Device.Adc": "OFF",
                "API_System.Device.Dac": "OFF",
                "API_System.Device.Gpio": "OFF",
                "API_System.Device.I2c": "OFF",
                "API_System.Device.I2s": "OFF",
                "API_System.Device.Pwm": "OFF",
                "API_System.IO.Ports": "OFF",
                "API_System.Device.Spi": "OFF",
                "API_nanoFramework.Device.Can": "OFF",
                "API_nanoFramework.Device.OneWire": "OFF",
                "API_System.Runtime.Serialization": "OFF",
                "API_Windows.Storage": "OFF",
                "API_nanoFramework.Graphics": "ON",
                "API_nanoFramework.Device.Bluetooth": "OFF",
                "API_System.Device.UsbStream": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "inherits": "base-user",
            "name": "RP2040-2MB",
            "displayName": "RP2040-2MB",
            "configurePreset": "RP2040",
            "configuration": "2"
        },
        {
            "inherits": "base-user",
            "name": "RP2040-4MB",
            "displayName": "RP2040-4MB",
            "configurePreset": "RP2040",
            "configuration": "4"
        },
        {
            "inherits": "base-user",
            "name": "RP2040-16MB",
            "displayName": "RP2040-16MB",
            "configurePreset": "RP2040",
            "configuration": "16"
        }
    ]
}

